@model SudokuSolver.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<center>
    <h2>Login</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "section" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("")

        <label>Email:</label> 
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "loginTextBox"})

        <label>Password:</label> 
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "loginTextBox" })

        <button type="submit">Login</button>

        <button type="button" onclick="location.href='@Url.Action("Register", "Account")'">Register</button>
    }
</center>

<p class="description">This is a simple MVC asp.net app that solves sudoku puzzles. It makes use of constraint-satisfaction backtracking search with degree heuristics to solve every possible puzzle in under 500ms.</p>


