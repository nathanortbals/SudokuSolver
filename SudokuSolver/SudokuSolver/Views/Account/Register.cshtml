@model SudokuSolver.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutPage.cshtml";
}


<center>
    <h2>Register</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "section" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("")

        <label>Email:</label> 
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "loginTextBox"})

        <label>Password:</label> 
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "loginTextBox" })

        <label>Confirm Password:</label> 
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Re-type password", @class = "loginTextBox" })

        <button type="submit">Register</button>
    }
</center>


