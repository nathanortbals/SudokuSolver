<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href=@Url.Content("~/Css/Layout.css") />
    <title>@ViewBag.Title</title>
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Label("Hello " + User.Identity.Name + "!");

            <input type="submit" value="LogOff" class="button">
        }
    }
    else
    {
        using (Html.BeginForm("Register", "Account", FormMethod.Get))
        {
            @Html.AntiForgeryToken()
            @Html.Label("Not logged in");

            <input type="submit" value="Register">
        }
    }

    <div>
        @RenderBody()
    </div>
</body>

</html>
